{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",

        "moduleResolution": "node",

        "esModuleInterop": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,

        "lib": ["es2018", "esnext.asynciterable"],

        "outDir": "dist",
        "baseUrl": ".",

        "paths": {
            "@/*": [
              "src/*"
            ],
        }
    },
    "include": [
        "src"
    ]
}