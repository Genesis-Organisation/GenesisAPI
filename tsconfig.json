{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",

    "moduleResolution": "node",

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "noEmit": true,

    "lib": ["es2018", "esnext.asynciterable"],

    "outDir": "dist",
    "baseUrl": ".",

    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}
